{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Redstone Launcher",
  "mainBinaryName": "Redstone Launcher",
  "version": "1.0.0",
  "identifier": "be.redstone.launcher",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "fullscreen": false,
        "height": 800,
        "resizable": true,
        "title": "Redstone Launcher",
        "label": "main",
        "width": 1280,
        "minHeight": 700,
        "minWidth": 1100,
        "zoomHotkeysEnabled": false,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
